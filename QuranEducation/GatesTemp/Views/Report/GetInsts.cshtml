@using QuranEducation.Models.VM
@using QuranEducation.Helpers
@using QuranEducation.Models
@model List<ApplicationUser>
@{
    ViewBag.Title = "المعلمين";
}
@section styles{
    <link href="~/assets/data-tables/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/toastr.css" rel="stylesheet" />
}
<!-- BEGIN PAGE CONTENT-->
<div class="row-fluid">
    <div class="span12">
        <div class="widget" style="background-color:transparent;">
            <div class="widget-title">
                <h4><i class="icon-building"></i>قائمة المعلمين</h4>
                <span class="tools">
                    <a href="javascript:;" class="icon-chevron-down"></a>
                    <a href="javascript:;" class="icon-remove"></a>
                </span>
            </div>

            <div class="widget-body">

                <br />
                <div>
                    @Html.ActionLink("إضافة معلم", "Register", "Account", null, new { @class = "btn btn-primary" })
                </div>

                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
                {
                    @Html.AntiForgeryToken()
                }



                <br />
                <table id="users" class="table table-bordered table-hover " style="width:100%;">
                    <thead>
                        <tr>
                            <th>الاسم</th>
                            <th>البريد الإلكتروني</th>
                            <th>رقم الهاتف</th>
                            <th>اللغة</th>
                            <th>الدورات الممنوحة</th>
                            <th>التقييم الممنوح</th>
                            <th>تعديل</th>
                            <th>تعطيل | تفعيل</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model != null)
                            {

                                foreach (var user in Model)
                                {
                                    var activate = (user.LockoutEndDateUtc != null && user.LockoutEndDateUtc > DateTime.Now) ? "تفعيل" : "تعطيل";
                                    <tr>
                                        <td>@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td>@user.PhoneNumber</td>

                                        <td>@LanguageMang.AvailableLanguages.FirstOrDefault(m => m.Code == user.LangCode).Name</td>

                                        <td>
                                            @{
                                                var tuts = GeneralHelper.GetInstTut(user.UserName);
                                                for (int i = 0; i < tuts.Count; i++)
                                                {
                                                    <div>
                                                        <a class="btn btn-link" href="~/Tutorial/HandlTutorial/@tuts[i].Id">@tuts[i].Title</a>
                                                    </div>
                                                    <br /><hr />
                                                }
                                            }
                                        </td>
                                        <td><a class="btn" href="~/Account/InstGrantedEval?Id=@user.UserName">عرض</a></td>
                                        <td><a class="btn" href="~/Account/Edit/@user.Id">تعديل</a></td>
                                        <td><a class="btn js-activate" data-user-id="@user.Id">@activate</a></td>
                                    </tr>
                                }

                            }
                        }
                    </tbody>
                </table>
                <br />
            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT-->
@section scripts{
    <link href="~/assets/data-tables/dataTables.bootstrap.min.css" rel="stylesheet" />
    <script src="~/assets/data-tables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/bootbox.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    <script>
        $(document).ready(function () {
            var table = $("#users").DataTable({
                "language": {
                    "sEmptyTable": "ليست هناك بيانات متاحة في الجدول",
                    "sLoadingRecords": "جارٍ التحميل...",
                    "sProcessing": "جارٍ التحميل...",
                    "sLengthMenu": "أظهر _MENU_ مدخلات",
                    "sZeroRecords": "لم يعثر على أية سجلات",
                    "sInfo": "إظهار _START_ إلى _END_ من أصل _TOTAL_ مدخل",
                    "sInfoEmpty": "يعرض 0 إلى 0 من أصل 0 سجل",
                    "sInfoFiltered": "(منتقاة من مجموع _MAX_ مُدخل)",
                    "sInfoPostFix": "",
                    "sSearch": "ابحث:",
                    "sUrl": "",
                    "oPaginate": {
                        "sFirst": "الأول",
                        "sPrevious": "السابق",
                        "sNext": "التالي",
                        "sLast": "الأخير"
                    },
                    "oAria": {
                        "sSortAscending": ": تفعيل لترتيب العمود تصاعدياً",
                        "sSortDescending": ": تفعيل لترتيب العمود تنازلياً"
                    }
                }
            });



            $("#users").on("click", ".js-activate", function () {

                var button = $(this);
                var form = $('#__AjaxAntiForgeryForm');
                var token = $('input[name="__RequestVerificationToken"]', form).val();

                bootbox.confirm("هل تريد " + $(button).text() + " هذا المعلم ؟", function (result) {
                    if (result) {
                        $.ajax({
                            type: "POST",
                            url: '@Url.Content("~/Account/Activate/")' + button.attr("data-user-id"),
                            data: {
                                __RequestVerificationToken: token
                            },
                            success: function () {
                                toastr.success("تم " + $(button).text() + " المعلم بنجاح");
                                var obisitText = "";
                                if ($(button).text() === "تعطيل") { obisitText = "تفعيل" } else { obisitText = "تعطيل" }
                                $(button).text(obisitText);
                            },
                            error: function (result) {
                                toastr.error("حدث خطأ");

                            }
                        });
                    }
                });
            });
        });
    </script>
}

