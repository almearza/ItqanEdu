@using QuranEducation.Models.VM
@using QuranEducation.Helpers
@model LectureVM
@{
    ViewBag.Title = ViewBag.tutTitle;
}

<!-- BEGIN PAGE CONTENT-->
<div class="row-fluid">
    <div class="span12">
        <div class="widget">
            <div class="widget-title">
                <h4><i class="icon-book"></i>@Model.Tutorial.Title</h4>
                <span class="tools">
                    <a href="javascript:;" class="icon-chevron-down"></a>
                    <a href="javascript:;" class="icon-remove"></a>
                </span>
            </div>
            @if (Model != null)
            {
                <div class="widget-body">
                    <div class="span3">
                        <div class="text-center profile-pic">
                            <img src="~/img/unnamed.png" alt="">
                        </div>

                    </div>
                    <div class="span8">
                        <h4>@Model.Tutorial.Title <br /><small>@Model.Title</small></h4>
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td class="span2">@QuranRes.LecDate</td>
                                    <td>
                                        @Model.LecDate
                                    </td>
                                </tr>
                                <tr>
                                    <td class="span2">@QuranRes.LecStTime</td>
                                    <td>
                                        @Model.LecStartTimeStr
                                    </td>
                                </tr>
                                <tr>
                                    <td class="span2">@QuranRes.LecEndTime</td>
                                    <td>
                                        @Model.LecEndTimeStr
                                    </td>
                                </tr>

                                <tr>
                                    <td class="span2">@QuranRes.Lang</td>
                                    <td>
                                        @LanguageMang.AvailableLanguages.FirstOrDefault(m => m.Code == Model.Tutorial.LangCode).Name
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <h4>@QuranRes.LecDesc</h4>
                        <div class="well" style="overflow:auto;width:100% !important">
                            @Html.Raw(Model.Descr)
                        </div>
                        <a class="btn btn-primary" href="@Model.VirtualRoomUrl">@QuranRes.LecVirtualUrl</a>
                        @if (!string.IsNullOrEmpty(Model.VideoUrl))
                        {
                            <a class="btn btn-primary" href="@Model.VideoUrl">@QuranRes.LecVirtualUrl</a>
                        }
                    </div>
                    <div class="space5"></div>
                </div>
            }
        </div>
    </div>
</div>
