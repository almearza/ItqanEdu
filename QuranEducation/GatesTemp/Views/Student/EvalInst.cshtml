@using QuranEducation.Helpers
@using QuranEducation.Models
@model InstEval
@{
    ViewBag.Title = QuranRes.InstEval;
}

<div class="widget" style="background-color:transparent;">
    <div class="widget-title">
        <h4><i class="icon-check"></i>@ViewBag.Title</h4>
        <span class="tools">
            <a href="javascript:;" class="icon-chevron-down"></a>
            <a href="javascript:;" class="icon-remove"></a>
        </span>
    </div>

    <div class="widget-body">
        @using (Html.BeginForm("EvalInst", "Student", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            var InstsAndTut = GeneralHelper.GetInst();
            if (InstsAndTut != null)
            {
                <div class="form-group ">
                    <label class="col-md-2 control-label">@QuranRes.InstName</label>
                    @Html.DropDownListFor(m => m.InstUserName, new SelectList(InstsAndTut.Insts, "UserName", "FullName"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.InstUserName, "", new { style = "color:red;" })
                </div>
                <div class="form-group ">
                    <label class="col-md-2 control-label">@QuranRes.TutorialTitle</label>
                    @Html.DropDownListFor(m => m.TutorialId, new SelectList(InstsAndTut.Tuts, "Id", "Title"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.TutorialId, "", new { style = "color:red;" })
                </div>
            }
            <div class="error-validation">
                @Html.ValidationSummary(true, QuranRes.ErrorSumTitle, new { @style = "color:red;" })
            </div>
            <div class="form-group">
                @QuranRes.ArriveInATime @Html.CheckBoxFor(m => m.ArriveInATime, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @QuranRes.GoodInStudy @Html.CheckBoxFor(m => m.GoodInStudy, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @QuranRes.GoodCommunications @Html.CheckBoxFor(m => m.GoodCommunications, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @QuranRes.GoodInVoice @Html.CheckBoxFor(m => m.GoodInVoice, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @QuranRes.TechProblemInTutorial @Html.CheckBoxFor(m => m.TechProblemInTutorial, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @QuranRes.GoodInUsingBoard @Html.CheckBoxFor(m => m.GoodInUsingBoard, new { @class = "form-control" })
            </div>
            <br />
            @Html.AntiForgeryToken()
            <br />
            <button type="submit" class="btn btn-primary">@QuranRes.btnSend</button>
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }




    </div>

</div>

