@{
    ViewBag.Title = QuranRes.VerifyCode;
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("VerifyCodePass", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class = "col-md-2 control-label" >@QuranRes.EnterCode</label>
        <div class="col-md-10">
            <input name="Code" id="Code" data-val="true" data-val-required="@QuranRes.FieldRequired"
                   class="input100" placeholder="@QuranRes.EnterCode" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="@QuranRes.btnSend" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
