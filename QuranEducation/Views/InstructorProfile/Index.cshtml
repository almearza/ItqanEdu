@using QuranEducation.Models.VM
@using QuranEducation.Helpers
@model InstructorProfileVm
@{
    ViewBag.Title = @QuranRes.ProfileTitle;
}

<!-- BEGIN PAGE CONTENT-->
<div class="row-fluid">
    <div class="span12">
        <div class="widget">
            <div class="widget-title">
                <h4><i class="icon-user"></i>@ViewBag.Title</h4>
                <span class="tools">
                    <a href="javascript:;" class="icon-chevron-down"></a>
                    <a href="javascript:;" class="icon-remove"></a>
                </span>
            </div>
          
            @if (Model != null)
            {
        <div class="widget-body">
            <div class="span6">
                <h4>@Model.AppUser.FullName <br /><small>@Model.Title</small></h4>
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <td class="span2">@QuranRes.Email :</td>
                            <td>
                                @Model.AppUser.Email
                            </td>
                        </tr>
                        <tr>
                            <td class="span2">@QuranRes.PhoneNumber</td>
                            <td>
                                @Model.AppUser.PhoneNumber
                            </td>
                        </tr>
                        <tr>
                            <td class="span2">@QuranRes.Lang :</td>
                            <td>
                                @LanguageMang.AvailableLanguages.FirstOrDefault(m => m.Code == Model.AppUser.LangCode).Name
                            </td>
                        </tr>

                    </tbody>
                </table>

                <h4>@QuranRes.AboutMe</h4>
                <div class="">
                    <address>
                        @Html.Raw(Model.Desc)
                    </address>
                </div>
                @if (User.IsInRole(RoleNames.InstructorLevel))
                {
                    <a class="btn btn-primary" href="~/InstructorProfile/HandlProfile">@QuranRes.EditProfileBtn </a>
                }
            </div>


            <div class="span3">
                <div class="text-center profile-pic">
                    <img src="~/images/InstructorProfile/@Model.ImageUrl" alt="">
                </div>

            </div>


            <div class="space5"></div>
        </div>
            }
        </div>
    </div>
</div>
<!-- END PAGE CONTENT-->
