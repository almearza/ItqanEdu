@using QuranEducation.Models.VM
@using QuranEducation.Models
@model List<AssSolution>
@{
    ViewBag.Title = QuranRes.AssSolution;
}
@section styles{
    <link href="~/assets/data-tables/dataTables.bootstrap.min.css" rel="stylesheet" />
}
<!-- BEGIN PAGE CONTENT-->
<div class="row-fluid">
    <div class="span12">
        <div class="widget" style="background-color:transparent;">
            <div class="widget-title">
                <h4><i class="icon-building"></i>@QuranRes.AssSolutions</h4>
                <span class="tools">
                    <a href="javascript:;" class="icon-chevron-down"></a>
                    <a href="javascript:;" class="icon-remove"></a>
                </span>
            </div>

            <div class="widget-body">
                <br />
                <p>@ViewBag.StName</p>
                <table id="assSols" class="table table-bordered table-hover " style="width:100%;">
                    <thead>
                        <tr>
                            <th>@QuranRes.AssigmentTitle</th>
                            <th>@QuranRes.SolDesc</th>
                            <th>@QuranRes.SolAttach</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model != null)
                            {

                                foreach (var assSol in Model)
                                {
                                    <tr>
                                        <td>@assSol.Assignment.Title</td>
                                        <td>@Html.Raw(assSol.Descr)</td>
                                        <td>
                                            @{
                                                if (assSol.SolutionAttachments != null)
                                                {
                                                    var counter = 1;
                                                    foreach (var att in assSol.SolutionAttachments)
                                                    {
                                                        <a class="btn btn-primary" href="~/Attachments/Solutions/@att.FileUrl" target="_blank">@QuranRes.ShowAtt @counter</a>
                                                        counter++;
                                                    }
                                                }
                                            }
                                        </td>


                                    </tr>
                                }

                            }
                        }
                    </tbody>
                </table>
                <br />
            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT-->
@section scripts{
    <link href="~/assets/data-tables/dataTables.bootstrap.min.css" rel="stylesheet" />
    <script src="~/assets/data-tables/jquery.dataTables.min.js"></script>

}





